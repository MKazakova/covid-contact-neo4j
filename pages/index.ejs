<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>Contacts</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>

    <a href="/addpeople">Ajouter une personne</a>
    <a href="/addmeeting">Ajouter un événemment</a>
    <h5>Rechercher une personne par téléphone</h5>
    <form method="POST" action="/searchPerson">
        <input type="text" name="phone" placeholder="Téléphone">
        <input type="submit" value="Submit" class="btn btn-secondary">
    </form>

    <%if (person !== "") { %>
        <a href="/person/<%= person.id%>"><%= person.name %> (<%= person.phone %>) </a>
        <h5>Rechercher les contacts de dernières 10 jours : </h5>
        <form method="POST" action="/showContacts">
            <input type="text" name="phone" value="<%= person.phone %>" hidden>
            <input type="submit" value="Recherche">
        </form>
    <% } %>

    <%if (people !== "") { %>
    <h3>Contacts</h3>
    <ul>
        <% people.forEach(function(person){ %>
            <li> <a href="/person/<%= person.id%>"></a><%= person.name %> (<%= person.phone %>)</a></li>
        <% }) %>
    </ul>
    <% } %>
</body>
</html>